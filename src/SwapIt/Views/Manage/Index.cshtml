@using SwapIt.Models
@model SwapIt.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
    Model.UseAdModels = new ApplicationDbContext().AdModels;
}

<h2>@User.Identity.Name.ToString()</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UseAdModels.GetEnumerator().Current.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UseAdModels.GetEnumerator().Current.Description)
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model.UseAdModels)
        {
            if (item.Owner == User.Identity.Name.ToString())
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new {id = item.AdId}) |
                        @Html.ActionLink("Details", "Details", new {id = item.AdId}) |
                        @Html.ActionLink("Delete", "Delete", new {id = item.AdId})
                    </td>
                </tr>
            }
        }

    </table>

</div>
