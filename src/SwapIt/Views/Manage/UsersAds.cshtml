@model IEnumerable<SwapIt.Models.AdModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.Owner == User.Identity.Name.ToString())
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new {id = item.AdId}) |
                    @Html.ActionLink("Details", "Details", new {id = item.AdId}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.AdId})
                </td>
            </tr>
        }
    }

</table>
